<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <context-param>
        <param-name>SQL_HOLDER</param-name>
        <param-value>../../resources/sqlQueries.properties</param-value>
    </context-param>

    <!-- JSP mapping-->
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>

    <servlet>
        <servlet-name>IndexView</servlet-name>
        <jsp-file>/WEB-INF/jsp/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexView</servlet-name>
        <url-pattern>/index.html</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginView</servlet-name>
        <jsp-file>/WEB-INF/jsp/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginView</servlet-name>
        <url-pattern>/login.html</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegistrationView</servlet-name>
        <jsp-file>/WEB-INF/jsp/registration.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationView</servlet-name>
        <url-pattern>/registration.html</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ConfirmAccountView</servlet-name>
        <jsp-file>/WEB-INF/jsp/confirmAccount.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConfirmAccountView</servlet-name>
        <url-pattern>/confirmAccount.html</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ConfirmAccountMessageSentView</servlet-name>
        <jsp-file>/WEB-INF/jsp/confirmAccountMessageSent.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConfirmAccountMessageSentView</servlet-name>
        <url-pattern>/confirmAccountMessageSent.html</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ResendVerificationOrRecoverPasswordView</servlet-name>
        <jsp-file>/WEB-INF/jsp/resendVerificationOrRecoverPassword.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResendVerificationOrRecoverPasswordView</servlet-name>
        <url-pattern>/resendVerificationOrRecoverPassword.html</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CheckQuestionView</servlet-name>
        <jsp-file>/WEB-INF/jsp/checkQuestion.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckQuestionView</servlet-name>
        <url-pattern>/checkQuestion.html</url-pattern>
    </servlet-mapping>


    <!--Servlets mapping-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>ua.nure.hanzha.SummaryTask4.servlet.AuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/auth.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>ua.nure.hanzha.SummaryTask4.servlet.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/register.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ConfirmAccountMailServlet</servlet-name>
        <servlet-class>ua.nure.hanzha.SummaryTask4.servlet.ConfirmAccountMailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConfirmAccountMailServlet</servlet-name>
        <url-pattern>/confirmAccount.send</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ConfirmAccountServlet</servlet-name>
        <servlet-class>ua.nure.hanzha.SummaryTask4.servlet.ConfirmAccountServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ConfirmAccountServlet</servlet-name>
        <url-pattern>/confirmAccount.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ResendVerificationOrRecoverPasswordServlet</servlet-name>
        <servlet-class>ua.nure.hanzha.SummaryTask4.servlet.resendEmail.ResendVerificationOrRecoverPasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResendVerificationOrRecoverPasswordServlet</servlet-name>
        <url-pattern>/resendVerificationOrRecoverPassword.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CheckQuestionServlet</servlet-name>
        <servlet-class>ua.nure.hanzha.SummaryTask4.servlet.check.CheckQuestionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckQuestionServlet</servlet-name>
        <url-pattern>/checkQuestion.do</url-pattern>
    </servlet-mapping>
    <!--Filters-->
    <filter>
        <filter-name>CharsetFilter</filter-name>

        <filter-class>ua.nure.hanzha.SummaryTask4.filters.CharsetFilter</filter-class>
        <init-param>
            <param-name>requestEncoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharsetFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <!--Listeners-->

    <listener>
        <listener-class>ua.nure.hanzha.SummaryTask4.listener.AppInitListener</listener-class>
    </listener>


    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/summaryTask4</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

</web-app>