<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <context-param>
        <param-name>SQL_HOLDER</param-name>
        <param-value>../../resources/sqlQueries.properties</param-value>
    </context-param>

    <!-- JSP mapping-->
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>

    <servlet>
        <servlet-name>IndexView</servlet-name>
        <jsp-file>/WEB-INF/jsp/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexView</servlet-name>
        <url-pattern>/index.html</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginView</servlet-name>
        <jsp-file>/WEB-INF/jsp/login.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginView</servlet-name>
        <url-pattern>/login.html</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegistrationView</servlet-name>
        <jsp-file>/WEB-INF/jsp/registration.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegistrationView</servlet-name>
        <url-pattern>/registration.html</url-pattern>
    </servlet-mapping>


    <!--Servlets mapping-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>ua.nure.hanzha.SummaryTask4.servlet.AuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/auth.do</url-pattern>
    </servlet-mapping>


    <!--Listeners-->

    <listener>
        <listener-class>ua.nure.hanzha.SummaryTask4.listener.AppInitListener</listener-class>
    </listener>


    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/summaryTask4</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

</web-app>