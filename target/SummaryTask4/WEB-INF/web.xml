<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- JSP mapping-->
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>

    <servlet>
        <servlet-name>LoginView</servlet-name>
        <jsp-file>/WEB-INF/jsp/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginView</servlet-name>
        <url-pattern>/index.html</url-pattern>
        <url-pattern>/login.html</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminMainView</servlet-name>
        <jsp-file>/WEB-INF/jsp/admin/adminIndex.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminMainView</servlet-name>
        <url-pattern>/admin/index.html</url-pattern>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminAddView</servlet-name>
        <jsp-file>/WEB-INF/jsp/admin/adminAdd.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminAddView</servlet-name>
        <url-pattern>/admin/add.html</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>UserMainView</servlet-name>
        <jsp-file>/WEB-INF/jsp/user/userIndex.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserMainView</servlet-name>
        <url-pattern>/user/index.html</url-pattern>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SQLExceptionView</servlet-name>
        <jsp-file>/WEB-INF/jsp/error/SQLException.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>SQLExceptionView</servlet-name>
        <url-pattern>/dberror.html</url-pattern>
    </servlet-mapping>

    <!-- Servlet mapping-->
    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>ua.nure.hanzha.SummaryTask4.servlet.AuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/auth.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminEditServlet</servlet-name>
        <servlet-class>ua.nure.hanzha.SummaryTask4.servlet.AdminEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminEditServlet</servlet-name>
        <url-pattern>/admin/edit.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminAddServlet</servlet-name>
        <servlet-class>ua.nure.hanzha.SummaryTask4.servlet.AdminAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminAddServlet</servlet-name>
        <url-pattern>/admin/add.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminDeleteServlet</servlet-name>
        <servlet-class>ua.nure.hanzha.SummaryTask4.servlet.AdminDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminDeleteServlet</servlet-name>
        <url-pattern>/admin/delete.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserEditServlet</servlet-name>
        <servlet-class>ua.nure.hanzha.SummaryTask4.servlet.UserEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserEditServlet</servlet-name>
        <url-pattern>/user/edit.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>ua.nure.hanzha.SummaryTask4.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>


    <!-- Filters -->
    <filter>
        <filter-name>CheckAdminRoleFilter</filter-name>
        <filter-class>ua.nure.hanzha.SummaryTask4.filters.CheckAdminRoleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CheckAdminRoleFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <filter>
        <filter-name>CheckUserRoleFilter</filter-name>
        <filter-class>ua.nure.hanzha.SummaryTask4.filters.CheckUserRoleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CheckUserRoleFilter</filter-name>
        <url-pattern>/user/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <filter>
        <filter-name>DataBaseRefreshFilter</filter-name>
        <filter-class>ua.nure.hanzha.SummaryTask4.filters.DataBaseRefreshFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>DataBaseRefreshFilter</filter-name>
        <url-pattern>/admin/index.html</url-pattern>
        <url-pattern>/user/index.html</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>DeletedAccountFilter</filter-name>
        <filter-class>ua.nure.hanzha.SummaryTask4.filters.DeletedAccountFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>DeletedAccountFilter</filter-name>
        <url-pattern>/user/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AuthRedirectFilter</filter-name>
        <filter-class>ua.nure.hanzha.SummaryTask4.filters.AuthRedirectFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthRedirectFilter</filter-name>
        <url-pattern>/</url-pattern>
        <url-pattern>/index.html</url-pattern>
        <url-pattern>/login.html</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>CharsetFilter</filter-name>
        <filter-class>ua.nure.hanzha.SummaryTask4.filters.CharsetFilter</filter-class>
        <init-param>
            <param-name>requestEncoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>CharsetFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Listener -->
    <listener>
        <listener-class>ua.nure.hanzha.SummaryTask4.listener.ServletInitListener</listener-class>
    </listener>

    <!-- Error pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/error/error404.jsp</location>
    </error-page>

    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/practice9</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

</web-app>